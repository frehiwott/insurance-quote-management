{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
       
        "outDir": "./build",
        "rootDir": "src",
        "target": "es6",
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
         "esModuleInterop": true,
        //  to fix issues related to import express from 'express'
        "allowSyntheticDefaultImports": true
    },
    
}